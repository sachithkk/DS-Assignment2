<div class="row">
    <div class="col-md-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div class="alert alert-success" id="success" {{#if noMessage}}hidden{{/if}}>
            {{ successMsg}}
        </div>
    </div>
</div>
{{#each product}}
    <div class="row">
        {{# each this}}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{this.imagePath}}" alt="...">
                    <div class="caption">
                        <h3>{{this.title}}</h3>
                        <p>{{this.description}}</p>
                        <h4>Rs:{{this.price}}</h4>
                        <p><a href="/add-to-cart/{{this._id}}" class="btn btn-primary" role="button">Add to cart <i class="fas fa-shopping-basket fa-2x"></i></a></p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}




