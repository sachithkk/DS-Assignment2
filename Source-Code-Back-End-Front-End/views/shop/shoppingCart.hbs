{{# if product}}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">

            <table class="table table-striped table-bordered ">
                <thead class="thead-dark">
                  <tr>
                      <th style="text-align: center" scope="col">Title</th>
                      <th style="" scope="col">Subtotal LKR</th>
                      <th scope="col">Quantity</th>
                      <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
    {{# each product}}
                    <tr>
                        <th>
                            <strong>{{this.item.title}}</strong>
                        </th>
                        <th>
                            <span class="lable lable-success">{{this.price}}</span>
                        </th>
                        <th>
                            <span class="badge">{{this.qty}}</span>
                        </th>
                        <th>
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle dropdown-toggle-split" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Action
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                    <li><a href="/reduce/{{this.item._id}}">Reduce By 1</a></li>
                                </div>
                            </div>
                        </th>
                    </tr>
    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">

            <div class="panel panel-primary">
                <div class="panel-heading"></div>
                <div class="panel-body">
                    <strong>GRAND TOTAL: LKR{{totalPrice}}.00</strong>
                </div>
            </div>
        </div>

    </div>
    <hr />
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a href="/checkout" type="button" class="btn btn-success">Card Payment <i class="fas fa-forward fa-lg"></i></a>
            <img src="https://enterpriseasia.org/area/2017/wp-content/uploads/2015/09/sampath-logo.png" width="350px" style="margin-left:15px"/>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a href="/mobile-payment" type="button" class="btn btn-success">Mobile Payment</a>
            <img src="http://bizenglish.adaderana.lk/wp-content/uploads/Dialog-Mobitel_logo.jpg" width="350px" style="margin-left:15px" />
        </div>
    </div>
{{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2>No Items in Cart</h2>
        </div>
    </div>
{{/if}}


