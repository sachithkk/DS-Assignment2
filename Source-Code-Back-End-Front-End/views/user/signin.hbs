<div class="row">
    <div class="col-md-6">
        <h1>LOGIN OR CREATE AN ACCOUNT</h1>
        <p>New Customers</p>
        <a href="/user/signup" class="btn btn-success btn-lg">Register</a>
    </div>
    <div class="col-md-6">
        <h3>Registered Customers</h3>
        <p>If you have an account with us, please log in.</p>
        {{#if hasErrors
        }}
        <div class="alert alert-danger">
            {{# each messages}}
                <div class=\"alert alert-danger\">
                <a href="/user/signin" class=\"close\" data-dismiss=\"alert\" aria-label=\"close\">&times;</a>
                <strong>{{this}}</strong>
            </div>
            {{/each}}
        </div>
        {{/if}}
        <form action="/user/signin" method="post">
            <div class="form-group">
                <label for="email">E-mail</label>
                <input type="text" id="email" name="email" class="form-control" />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control" />
            </div>
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button type="submit" class="btn btn-success">Sign In</button>
        </form>
    <div class="social-login">
        <h3>Social Login</h3>
        <a href="/user/google" class="btn btn-danger"><i class="fab fa-google">  Google+</i></a>
    </div>
    </div>
</div>